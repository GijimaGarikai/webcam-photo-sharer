<CameraScreen>:
    GridLayout:
        cols: 1
        Camera:
            id: camera
            resolution: (3000, 1440)
            play: False
            size_hint_y: 0.8
            opacity: 0 if root.ids.camera.play == False else 1
        Button:
            id: camera_button
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
            background_normal: "images/normal.png"

        Button:
            text: 'Capture'
            on_press: root.capture()
            size_hint_y: 0.1

<ImageScreen>:
    GridLayout:
        padding: 10
        spacing: 10
        cols: 1
        Image:
            id: img
            size_hint_y: 0.7
        Button:
            text: 'Create Shareable Link'
            on_press: root.create_link()
            size_hint_y: 0.1
        Label:
            id: link
            text: 'waiiiittttt'
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
            Button:
                text: 'Open Link'
                on_press: root.open_link()

<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'